        <profile>
            <id>dev-jsp</id>
            <properties>
                <env>dev-jsp</env>
                <locators>jsp</locators>
                <propFile>${project.build.testOutputDirectory}/env/environment.${env}.properties</propFile>
                <locatorDir>${project.build.testOutputDirectory}/com/urbandaddy/testsuite/locators/${locators}/
                </locatorDir>
            </properties>

            <build>
                <testresources>
                    <testResource>
                        <directory>src/test/resources</directory>
