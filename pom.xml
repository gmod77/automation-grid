                                </goals>
                                <configuration>
                                    <skip>false</skip>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>qa</id>
            <properties>
                <env>qa</env>
                <locators>default</locators>
                <propFile>${project.build.testOutputDirectory}/env/environment.${env}.properties</propFile>
                <locatorDir>${project.build.testOutputDirectory}/com/urbandaddy/testsuite/locators/${locators}/
                </locatorDir>
            </properties>

            <build>
